<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>bar</groupId>
  <artifactId>project-a</artifactId>
  <version>1.1-2</version>
  <packaging>dpkg</packaging>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.mojo.deb</groupId>
      <artifactId>myapp</artifactId>
      <version>1.1</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-2</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>directory-inline</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <finalName>debian/assembled-pkg</finalName>
          <ignoreDirFormatExtensions>true</ignoreDirFormatExtensions>
          <tarlongfilemode>gnu</tarlongfilemode>
          <descriptors>
            <descriptor>src/main/assembly/dpkg.xml</descriptor>
            <descriptor>src/main/assembly/dpkg-derivate.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>deb-maven-plugin</artifactId>
        <version>testing</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>derivate</id>
            <goals>
              <goal>package-binary</goal>
            </goals>
            <configuration>
              <classifier>derivate</classifier>
              <packageRoot>target/debian/assembled-pkg-dpkg-derivate</packageRoot>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <autoGenerateDepends>false</autoGenerateDepends>
          <maintainer>trygvis@codehaus.org</maintainer>
          <section>devel</section>
          <useFakeroot>false</useFakeroot>
          <packageRoot>target/debian/assembled-pkg-dpkg</packageRoot>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
