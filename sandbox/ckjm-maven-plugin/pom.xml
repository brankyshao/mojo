      <email>wfay@codehaus.org</email>
      <url>http://codehaus.org/~wfay/</url>
      <organization />
      <roles>
        <role>Documentation</role>
        <role>Java Developer</role>
      </roles>
      <timezone>-5</timezone>
    </developer>
  </developers>
  <contributors>
