<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.codehaus.mojo.chronos.it</groupId>
	<artifactId>minimalconfigwithchecks</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>minimalconfigwithchecks</name>
	<url>http://maven.apache.org</url>
	<properties>
		<jmeter.home>/Applications/Utilities/Java/jakarta-jmeter-2.3.1</jmeter.home>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>chronos-maven-plugin</artifactId>
				<configuration>
					<input>${basedir}/src/main/resources/simplewebplan.jmx</input>
                    <responsetimeaverage>550.0</responsetimeaverage>
                    <maxthroughput>3.2</maxthroughput>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>jmeter</goal>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>chronos-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
</project>
