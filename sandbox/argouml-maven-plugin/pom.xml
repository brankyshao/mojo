  <inceptionYear>2007</inceptionYear>
  <prerequisites>
    <maven>2.0.2</maven>
  </prerequisites>
  <name>ArgoUML Maven Plugin</name>
  <description>
    ArgoUML Maven Plugin allows exporting ArgoUML model files into images.
    It is intended for image creation for Maven-generated sites.
  </description>
  <developers>
    <developer>
      <id>slonopotamus</id>
      <name>Marat Radchenko</name>
      <email>slonopotamusorama@gmail.com</email>
      <url>http://slonopotamus.org</url>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+3</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The MIT License</name>
      <!-- TODO: maven-docck-plugin complains about bad url -->
      <url>file://${project.basedir}/LICENSE.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <build>
    <plugins>
      <plugin>
        <groupId>${project.groupId}</groupId>
        <artifactId>${project.artifactId}</artifactId>
        <version>${project.version}</version>
        <executions>
          <execution>
            <phase>pre-site</phase>
            <goals>
              <goal>transform</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDirectory>${project.build.directory}/site/images/argouml</outputDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <url>http://mojo.codehaus.org/${project.artifactId}</url>
  <scm>
    <url>http://svn.mojo.codehaus.org/browse/mojo/trunk/sandbox/${project.artifactId}/</url>
    <connection>scm:svn:http://svn.codehaus.org/mojo/trunk/sandbox/${project.artifactId}/</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/mojo/trunk/sandbox/${project.artifactId}/
