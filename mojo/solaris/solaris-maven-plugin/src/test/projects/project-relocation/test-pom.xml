<project>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>solaris-maven-plugin</artifactId>
        <version>1.0-alpha-1-SNAPSHOT</version>
        <configuration>
          <packageRoot>${basedir}/target/project-relocation/solaris/assembled-pkg</packageRoot>
          <defaults>
            <user>mysystem</user>
            <group>mysystem</group>
            <relative>true</relative>
          </defaults>
          <generatedPrototype>
            <directoryCollection>
              <mode>?</mode>
              <user>?</user>
              <group>?</group>
              <includes>
                <include>opt</include>
                <include>opt/jb</include>
              </includes>
            </directoryCollection>
            <fileCollection>
              <mode>0755</mode>
              <includes>
                <include>bin/*</include>
              </includes>
            </fileCollection>
            <fileCollection>
              <includes>
                <include>etc/*</include>
              </includes>
            </fileCollection>
            <editableEntry>
              <class>conf</class>
              <path>etc/config.properties</path>
            </editableEntry>
            <fileCollection>
              <class>conf</class>
              <includes>
                <include>etc/jetty-context.xml</include>
              </includes>
            </fileCollection>
            <iEntry>
              <path>i.jbconf</path>
              <realPath>../../solaris-pkg-support/i.jbconf</realPath>
            </iEntry>
            <iEntry>
              <path>r.jbconf</path>
              <realPath>../../solaris-pkg-support/r.jbconf</realPath>
            </iEntry>
          </generatedPrototype>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
